{
	"name": "kind-antlr4-c3",
	"description": "Simple Language Server component for the Kotlin language, to demonstrate code completion with antlr4-c3.",
	"version": "1.2.0",
	"author": "Strumenta s.r.l.",
	"license": "Apache",
	"repository": {
		"url": "https://github.com/Strumenta/article-antlr4-c3"
	},
	"engines": {
		"node": "*"
	},
	"main": "out/index.js",
	"files": [
		"*.md",
		"out",
		"src"
	],
	"dependencies": {
		"antlr4-c3": "1.1.16",
		"antlr4ts": "0.5.0-alpha.4",
		"fuzzysort": "1.9.0"
	},
	"scripts": {
		"preantlr4ts": "rimraf src/parser grammar/.antlr",
		"antlr4ts": "antlr4ts -o src/parser -Xexact-output-dir -visitor grammar/KindParser.g4 grammar/KindLexer.g4",
		"prebuild": "rimraf out",
		"build": "npm run antlr4ts && tsc -b",
		"test": "mocha -r ts-node/register tests/**/*.test.ts"
	},
	"devDependencies": {
		"@monx/eslint-config-next": "^1.0.7",
		"@types/chai": "4.3.1",
		"@types/mocha": "9.1.1",
		"@types/node": "17.0.35",
		"@typescript-eslint/eslint-plugin": "5.25.0",
		"antlr4ts-cli": "0.5.0-alpha.4",
		"chai": "4.3.6",
		"eslint": "8.16.0",
		"mocha": "10.0.0",
		"rimraf": "^3.0.0",
		"ts-node": "10.7.0",
		"typescript": "3.9.7"
	}
}
